{
  "advanced_model_management": {
    "enabled": true,
    "performance_analytics": {
      "enabled": true,
      "metrics_retention_hours": 168,
      "detailed_metrics": true,
      "performance_callbacks": true
    },
    "ab_testing": {
      "enabled": true,
      "max_concurrent_tests": 5,
      "default_test_duration_hours": 24,
      "significance_threshold": 0.05,
      "minimum_sample_size": 100
    },
    "model_selection": {
      "auto_selection": true,
      "selection_criteria": {
        "primary_metric": "word_error_rate",
        "max_acceptable_latency_ms": 1000.0,
        "min_acceptable_confidence": 0.8,
        "max_acceptable_memory_mb": 2048,
        "max_acceptable_cpu_utilization": 0.8
      },
      "metric_weights": {
        "word_error_rate": 0.4,
        "average_latency": 0.3,
        "confidence_score": 0.2,
        "memory_usage": 0.1
      }
    },
    "rollback": {
      "auto_rollback_enabled": false,
      "rollback_threshold_percentage": 15.0,
      "checkpoint_retention_days": 30
    }
  },
  "custom_model_integration": {
    "enabled": true,
    "validation": {
      "auto_validation": true,
      "security_scan": true,
      "performance_validation": true,
      "integrity_check": true
    },
    "optimization": {
      "auto_optimization": true,
      "optimize_for_speed": false,
      "optimize_for_memory": true,
      "optimize_for_accuracy": true,
      "quantization": {
        "enabled": true,
        "default_type": "INT8",
        "preserve_accuracy": true,
        "max_accuracy_loss": 0.05
      }
    },
    "deployment": {
      "default_strategy": "gradual",
      "health_checks": true,
      "health_check_threshold": 0.95,
      "rollout_interval_minutes": 30,
      "initial_traffic_percentage": 10.0,
      "traffic_increment_percentage": 10.0
    },
    "supported_formats": [
      ".bin",
      ".onnx",
      ".pb",
      ".pth",
      ".h5",
      ".tflite"
    ],
    "supported_architectures": [
      "whisper",
      "wav2vec2",
      "transformer",
      "rnn",
      "cnn"
    ]
  }
}